alias adb-install="adb connect 192.168.0.10:5555;adb install"
alias adb-logcat="adb connect 192.168.0.10:5555;adb logcat"
function adb-shell()
{
	adb connect 192.168.0.10
	adb shell $@
}

function make_cs_under_here()
{
	find . -name "*.h" >> cscope.file
	find . -name "*.cpp" >> cscope.file
	find . -name "*.cc" >> cscope.file
	find . -name "*.java" >> cscope.file
	find . -name "*.hh" >> cscope.file
	find . -name "*.mk" >> cscope.file
	cscope -bqR
}

 function anim () { animate -delay 50  -loop 1  -resize 200x300  $@; }
alias mvlc="vlc --play-and-exit --no-loop -I dummy "

ainstall()
{
  sudo apt-get install $@
  echo "`date +%F-%R`install $@" >> /home/gwj/.apt.log
}

gentags()
{
  echo "generate tags..."
( find . -name "*.[ch]"; find . -name "*.cpp" )  | ctags  -L -
  echo "generate cscope..."
( find . -name "*.[ch]"; find . -name "*.cpp"; find . -name "*.java" ;find . -name "*.aidl" ;   )  | cscope -bR -i-
}

run()
{
 eval ulimit -c unlimited
 $@
 [ -e "core" ] && gdb -c core -batch 
# eval ulimit -c 0
}

load_android()
{
  cd $c; source ./build/envsetup.sh; 
  cd -
}

