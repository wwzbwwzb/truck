alias adb-install="adb connect 192.168.0.10:5555;adb install"
alias adb-logcat="adb connect 192.168.0.10:5555;adb logcat"
function adb-shell()
{
	adb connect 192.168.0.10
	adb shell $@
}

function make_cs_under_here()
{
	find . -name "*.h" >> cscope.file
	find . -name "*.cpp" >> cscope.file
	find . -name "*.cc" >> cscope.file
	find . -name "*.java" >> cscope.file
	find . -name "*.hh" >> cscope.file
	find . -name "*.mk" >> cscope.file
	cscope -bqR
}

